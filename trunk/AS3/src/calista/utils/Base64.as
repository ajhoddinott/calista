 = ((chr1 & 3) << 4) | (chr2 >> 4);                enc3 = ((chr2 & 15) << 2) | (chr3 >> 6);                enc4 = chr3 & 63;                if(isNaN(chr2))                 {                    enc3 = enc4 = 64;                }                    else if(isNaN(chr3))                 {                    enc4 = 64;                }                output += base64chars.charAt(enc1) + base64chars.charAt(enc2) ;                output += base64chars.charAt(enc3) + base64chars.charAt(enc4) ;            }            return output;        }        /**         * Encodes a base64 string with the specified ByteArray.         */        public static function encodeByteArray( data:ByteArray ):String         {            if ( !data )            {                return "" ;            }            var i:int ;            var l:int ;            var pos:uint = data.position ;            var output:String = "" ;            var dataBuffer:Vector.<uint> ;            var outputBuffer:Vector.<uint> = new Vector.<uint>(4) ;            data.position = 0 ;            while ( data.bytesAvailable > 0 )             {                dataBuffer = new Vector.<uint>();                for ( i = 0 ;i < 3 && data.bytesAvailable > 0;i++ )                {                    dataBuffer[i] = data.readUnsignedByte();                }                outputBuffer[0] = (dataBuffer[0] & 0xfc) >> 2 ;                outputBuffer[1] = ((dataBuffer[0] & 0x03) << 4) | ((dataBuffer[1]) >> 4) ;                outputBuffer[2] = ((dataBuffer[1] & 0x0f) << 2) | ((dataBuffer[2]) >> 6) ;                outputBuffer[3] = dataBuffer[2] & 0x3f;                l = dataBuffer.length ;                for ( i = l ;i < 3;i++ )                 {                    outputBuffer[i + 1] = 64;                }                l = outputBuffer.length ;                for ( i = 0 ;i < l ;i++)                 {                    output += base64chars.charAt(outputBuffer[i]) ;                }            }            data.position = pos ;            return output;        }        /**         * Decodes a base64 string.         * <p><b>Example :</b></p>         * <pre class="prettyprint">         * import calista.utils.Base64 ;         *          * var source:String = "hello world with a base 64 algorithm" ;         *          * var encode:String = Base64.encode( source ) ;         * trace("encode : " + encode) ;         *          * var decode:String = Base64.decode( encode ) ;         * trace("decode : " + decode) ;         *          * // encode : aGVsbG8gd29ybGQgd2l0aCBhIGJhc2UgNjQgYWxnb3JpdGht         * // decode : hello world with a base 64 algorithm         * </pre>         */        public static function decode( str:String ):String        {            if ( !str || str == "" )            {                return "" ;            }            var i:int ;            var size:int = str.length ;            var output:String = "" ;            var chr1:int, chr2:int, chr3:int;            var enc1:int, enc2:int, enc3:int, enc4:int;            while (i < size)             {                enc1 = base64chars.indexOf(str.charAt(i++)) ;                enc2 = base64chars.indexOf(str.charAt(i++)) ;                enc3 = base64chars.indexOf(str.charAt(i++)) ;                enc4 = base64chars.indexOf(str.charAt(i++)) ;                chr1 = (enc1 << 2) | (enc2 >> 4);                chr2 = ((enc2 & 15) << 4) | (enc3 >> 2);                chr3 = ((enc3 & 3) << 6) | enc4 ;                output += String.fromCharCode(chr1);                if (enc3 != 64)                 {                    output = output + String.fromCharCode(chr2);                }                if (enc4 != 64)                 {                    output = output + String.fromCharCode(chr3);                }            }            return output;        }                /**         * Decodes a base64 string in a ByteArray object.         */        public static function decodeToByteArray(data:String):ByteArray         {            var output:ByteArray           = new ByteArray();            var dataBuffer:Vector.<uint>   = new Vector.<uint>(4) ;            var outputBuffer:Vector.<uint> = new Vector.<uint>(3) ;            var i:uint ;            var j:uint ;            var k:uint ;            for ( i ; i < data.length ; i += 4)             {                for ( j = 0 ; j < 4 && i + j < data.length ; j++ )                 {                    dataBuffer[j] = base64chars.indexOf(data.charAt(i + j));                }                outputBuffer[0] = (dataBuffer[0] << 2) + ((dataBuffer[1] & 0x30) >> 4);                outputBuffer[1] = ((dataBuffer[1] & 0x0f) << 4) + ((dataBuffer[2] & 0x3c) >> 2);                outputBuffer[2] = ((dataBuffer[2] & 0x03) << 6) + dataBuffer[3];                for ( k = 0 ; k < outputBuffer.length ; k++)                 {                    if (dataBuffer[k + 1] == 64) break;                    output.writeByte(outputBuffer[k]);                }            }            output.position = 0;            return output;        }                /**         * Internal base 64 characters.         */        private static const base64chars:String = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789+/=";    }}